@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron">
    <h1>Contoso University</h1>
</div>
<div class="row">
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-12">
                <h1>Contoso University is a Temple of Mastery</h1>
                <p class="lead">
                    Use this application to manage your courses, instructors, and students. Always keep in mind our mission: to prepare students for life after education.
                </p>
            </div>
            <div class="col-md-6">
                <h3>Courses</h3>
                <p>Use this section to manage the course offering.</p>
                @Html.ActionLink("Courses", "Index", "Courses", null, new { @class = "btn btn-primary" })
            </div>
            <div class="col-md-6">
                <h3>Students</h3>
                <p>Here you may add, remove, or alter student records.</p>
                @Html.ActionLink("Students", "Index", "Students", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
    <div class="col-md-4 text-right">
        <img src="~/images/girl.jpeg" alt="Alternate Text" />
    </div>
</div>